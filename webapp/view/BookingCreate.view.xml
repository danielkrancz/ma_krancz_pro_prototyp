<mvc:View xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.uxap"
		   xmlns:core="sap.ui.core"
		   xmlns:layout="sap.ui.layout"
		   xmlns:form="sap.ui.layout.form"
		   xmlns:m="sap.m"
		   controllerName="at.hb.makrancz.procodeapp.controller.BookingCreate"
		   height="100%">
	<ObjectPageLayout id="ObjectPageLayout" showFooter="true" showTitleInHeaderContent="true">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Unnamed Object" wrapping="true"/>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox fitContainer="true" alignItems="Center">
						<m:Title text="Unnamed Object" wrapping="true" />
					</m:FlexBox>
				</snappedHeading>

			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<sections>
			<ObjectPageSection titleUppercase="false" title="Booking">
                <subSections>
                    <ObjectPageSubSection id="travelDetailSubSection" titleUppercase="false">
                        <blocks>
                            <form:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
								<m:Label text="{/#BookingType/BookingID/@sap:label}"/>
								<m:Text text="-"/>

                                <m:Label text="{/#BookingType/BookingDate/@sap:label}"/>
								<m:DatePicker required="true" dateValue="{ path: 'createModel>/BookingDate', type: 'sap.ui.model.odata.type.Date', formatOptions: { UTC:true } }"/>

                                <m:Label text="{/#BookingType/CustomerID/@sap:label}"/>
								<m:Input required="true" value="{createModel>/CustomerID}"/>

								<m:Label text="{/#BookingType/CarrierID/@sap:label}"/>
								<m:Input required="true" value="{createModel>/CarrierID}"/>

								<m:Label text="{/#BookingType/ConnectionID/@sap:label}"/>
								<m:Input required="true" value="{createModel>/ConnectionID}"/>

								<m:Label text="{/#BookingType/FlightDate/@sap:label}"/>
								<m:DatePicker required="true" dateValue="{ path: 'createModel>/FlightDate', type: 'sap.ui.model.odata.type.Date', formatOptions: { UTC:true }}"/>

								<m:Label text="{/#BookingType/FlightPrice/@sap:label}"/>
								<m:Input value="{ path: 'createModel>/FlightPrice', type: 'sap.ui.model.odata.type.Decimal', formatOptions: { scale: 2 } }" />
								<m:Input value="{createModel>/CurrencyCode}" />

								<m:Label text="{/#BookingType/BookingStatus/@sap:label}"/>
								<m:ComboBox required="true" selectedKey="{createModel>/BookingStatus}" items="{ path: '/BookingStatusVH', templateShareable: true }">
									<core:Item key="{BookingStatus}" text="{BookingStatus_Text}"/>
								</m:ComboBox>

							</form:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button text="Save" type="Emphasized" press="onSave" />
				<m:Button text="Cancel" type="Transparent" press="onCancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>
